{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "tool_result.schema.json",
  "title": "ToolResult",
  "type": "object",
  "properties": {
    "schema_version": { "type": "string", "const": "v1" },

    "run_id": { "type": "string", "minLength": 8 },
    "step_id": { "type": "string", "minLength": 1 },

    "tool": { "type": "string", "minLength": 1 },
    "operation": { "type": "string", "minLength": 1 },

    "status": { "type": "string", "enum": ["SUCCEEDED", "FAILED"] },

    "output": { "type": "object", "additionalProperties": true },

    "artifacts": {
      "type": "array",
      "items": { "$ref": "../control-plane/Shared.schema.json#/$defs/ArtifactPointer" }
    },

    "error": { "$ref": "../control-plane/Shared.schema.json#/$defs/Error" }
  },
  "required": ["schema_version", "run_id", "step_id", "tool", "operation", "status"],
  "additionalProperties": false
}
