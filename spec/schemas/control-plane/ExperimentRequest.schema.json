{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/control-plane/ExperimentRequest.schema.json",
  "title": "ExperimentRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["api_version", "request_id", "created_at", "project", "workflow_ref", "inputs"],
  "properties": {
    "api_version": { "type": "string", "const": "v1" },
    "request_id": { "type": "string", "minLength": 8 },
    "created_at": { "type": "string", "format": "date-time" },
    "project": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "owner"],
      "properties": {
        "name": { "type": "string", "minLength": 2 },
        "owner": { "type": "string", "minLength": 2 },
        "cost_center": { "type": "string" }
      }
    },
    "workflow_ref": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "version"],
      "properties": {
        "name": { "type": "string", "minLength": 2 },
        "version": { "type": "string", "minLength": 1 }
      }
    },
    "inputs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "uri", "content_type"],
        "properties": {
          "name": { "type": "string" },
          "uri": { "type": "string", "minLength": 6 },
          "content_type": { "type": "string" },
          "sha256": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
        }
      }
    },
    "parameters": {
      "type": "object",
      "additionalProperties": true
    },
    "constraints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "max_cost_usd": { "type": "number", "minimum": 0 },
        "max_runtime_seconds": { "type": "integer", "minimum": 1 },
        "allow_network": { "type": "boolean", "default": false }
      }
    },
    "tags": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  }
}
