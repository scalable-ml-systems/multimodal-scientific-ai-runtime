{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/control-plane/RunManifest.schema.json",
  "title": "RunManifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "api_version",
    "run_id",
    "request_id",
    "created_at",
    "workflow",
    "artifact_root",
    "steps"
  ],
  "properties": {
    "api_version": { "type": "string", "const": "v1" },
    "run_id": { "type": "string", "minLength": 8 },
    "request_id": { "type": "string", "minLength": 8 },
    "created_at": { "type": "string", "format": "date-time" },
    "workflow": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "version", "dag_digest"],
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "dag_digest": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" }
      }
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "git": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "repo": { "type": "string" },
            "commit": { "type": "string" },
            "dirty": { "type": "boolean" }
          }
        },
        "build": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "artifact_root": {
      "type": "string",
      "description": "Prefix URI where all run artifacts live, e.g. s3://bucket/runs/<run_id>/"
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["step_id", "name", "tool", "inputs", "outputs"],
        "properties": {
          "step_id": { "type": "string", "minLength": 1 },
          "name": { "type": "string", "minLength": 1 },
          "depends_on": {
            "type": "array",
            "items": { "type": "string" },
            "default": []
          },
          "tool": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "version", "io_schema_ref"],
            "properties": {
              "name": { "type": "string" },
              "version": { "type": "string" },
              "io_schema_ref": { "type": "string" },
              "image": { "type": "string", "description": "Container image ref (optional in Phase 0)" }
            }
          },
          "inputs": {
            "type": "array",
            "items": { "$ref": "https://example.org/schemas/control-plane/Shared.schema.json#/definitions/ArtifactRef" }
          },
          "outputs": {
            "type": "array",
            "items": { "$ref": "https://example.org/schemas/control-plane/Shared.schema.json#/definitions/ArtifactRef" }
          },
          "parameters": { "type": "object", "additionalProperties": true }
        }
      }
    }
  }
}
