{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "step_result.schema.json",
  "title": "StepResult",
  "type": "object",
  "properties": {
    "schema_version": { "type": "string", "const": "v1" },
    "correlation_id": { "$ref": "./Shared.schema.json#/$defs/CorrelationId" },

    "run_id": { "type": "string", "minLength": 8 },
    "step_id": { "type": "string", "minLength": 1 },
    "step_type": { "type": "string", "minLength": 1 },

    "status": { "type": "string", "enum": ["SUCCEEDED", "FAILED", "SKIPPED"] },
    "started_at": { "type": "string", "format": "date-time" },
    "finished_at": { "type": "string", "format": "date-time" },

    "input": { "type": "object", "additionalProperties": true },
    "output": { "type": "object", "additionalProperties": true },

    "artifacts": {
      "type": "array",
      "items": { "$ref": "./Shared.schema.json#/$defs/ArtifactPointer" }
    },

    "error": { "$ref": "./Shared.schema.json#/$defs/Error" },

    "verification": {
      "type": "object",
      "properties": {
        "passed": { "type": "boolean" },
        "notes": { "type": "string" }
      },
      "required": ["passed"],
      "additionalProperties": false
    }
  },
  "required": ["schema_version", "correlation_id", "run_id", "step_id", "step_type", "status", "started_at"],
  "additionalProperties": false
}
