{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/control-plane/Shared.schema.json",
  "title": "Shared",
  "type": "object",
  "definitions": {
    "ArtifactRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "uri", "content_type"],
      "properties": {
        "name": { "type": "string" },
        "uri": { "type": "string" },
        "content_type": { "type": "string" },
        "sha256": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
        "bytes": { "type": "integer", "minimum": 0 }
      }
    }
  }
}
