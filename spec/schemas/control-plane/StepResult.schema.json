{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/control-plane/StepResult.schema.json",
  "title": "StepResult",
  "type": "object",
  "additionalProperties": false,
  "required": ["api_version", "run_id", "step_id", "status", "started_at"],
  "properties": {
    "api_version": { "type": "string", "const": "v1" },
    "run_id": { "type": "string" },
    "step_id": { "type": "string" },
    "attempt": { "type": "integer", "minimum": 1, "default": 1 },
    "status": { "type": "string", "enum": ["PENDING", "RUNNING", "SUCCEEDED", "FAILED", "SKIPPED"] },
    "started_at": { "type": "string", "format": "date-time" },
    "ended_at": { "type": "string", "format": "date-time" },
    "inputs": {
      "type": "array",
      "items": { "$ref": "https://example.org/schemas/control-plane/Shared.schema.json#/definitions/ArtifactRef" }
    },
    "outputs": {
      "type": "array",
      "items": { "$ref": "https://example.org/schemas/control-plane/Shared.schema.json#/definitions/ArtifactRef" }
    },
    "metrics": {
      "type": "object",
      "additionalProperties": { "type": ["number", "string", "boolean"] }
    },
    "logs_uri": { "type": "string" },
    "error": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "type": "string" },
        "message": { "type": "string" },
        "stack": { "type": "string" }
      }
    }
  }
}
