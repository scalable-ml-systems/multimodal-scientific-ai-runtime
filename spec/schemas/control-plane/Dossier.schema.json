{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/control-plane/Dossier.schema.json",
  "title": "Dossier",
  "type": "object",
  "additionalProperties": false,
  "required": ["api_version", "run_id", "created_at", "evidence_index"],
  "properties": {
    "api_version": { "type": "string", "const": "v1" },
    "run_id": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "summary": { "type": "string" },
    "key_findings": {
      "type": "array",
      "items": { "type": "string" }
    },
    "evidence_index": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["kind", "ref"],
        "properties": {
          "kind": { "type": "string", "enum": ["StepResult", "Artifact"] },
          "ref": { "type": "string", "description": "URI or ID reference" },
          "note": { "type": "string" }
        }
      }
    },
    "output_artifacts": {
      "type": "array",
      "items": { "$ref": "https://example.org/schemas/control-plane/Shared.schema.json#/definitions/ArtifactRef" }
    }
  }
}
